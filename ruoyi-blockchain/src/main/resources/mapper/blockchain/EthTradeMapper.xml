<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.blockchain.mapper.EthTradeMapper">
    
    <resultMap type="EthTrade" id="EthTradeResult">
        <result property="txHash"    column="tx_hash"    />
        <result property="fromAddress"    column="from_address"    />
        <result property="toAddress"    column="to_address"    />
        <result property="amount"    column="amount"    />
        <result property="txTime"    column="tx_time"    />
        <result property="blockNum"    column="block_num"    />
        <result property="isNotify"    column="is_notify"    />
        <result property="notifyCnt"    column="notify_cnt"    />
    </resultMap>

    <sql id="selectEthTradeVo">
        select tx_hash, from_address, to_address, amount, tx_time, block_num, is_notify,notify_cnt from eth_trade
    </sql>

    <select id="selectEthTradeList" parameterType="EthTrade" resultMap="EthTradeResult">
        <include refid="selectEthTradeVo"/>
        <where>  
            <if test="fromAddress != null  and fromAddress != ''"> and from_address = #{fromAddress}</if>
            <if test="toAddress != null  and toAddress != ''"> and to_address = #{toAddress}</if>
            <if test="amount != null "> and amount = #{amount}</if>
            <if test="txTime != null "> and tx_time = #{txTime}</if>
            <if test="blockNum != null "> and block_num = #{blockNum}</if>
            <if test="isNotify != null "> and is_notify = #{isNotify}</if>
        </where>
    </select>
    
    <select id="selectEthTradeByTxHash" parameterType="String" resultMap="EthTradeResult">
        <include refid="selectEthTradeVo"/>
        where tx_hash = #{txHash}
    </select>

    <insert id="insertEthTrade" parameterType="EthTrade">
        insert into eth_trade
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="txHash != null">tx_hash,</if>
            <if test="fromAddress != null and fromAddress != ''">from_address,</if>
            <if test="toAddress != null and toAddress != ''">to_address,</if>
            <if test="amount != null">amount,</if>
            <if test="txTime != null">tx_time,</if>
            <if test="blockNum != null">block_num,</if>
            <if test="isNotify != null">is_notify,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="txHash != null">#{txHash},</if>
            <if test="fromAddress != null and fromAddress != ''">#{fromAddress},</if>
            <if test="toAddress != null and toAddress != ''">#{toAddress},</if>
            <if test="amount != null">#{amount},</if>
            <if test="txTime != null">#{txTime},</if>
            <if test="blockNum != null">#{blockNum},</if>
            <if test="isNotify != null">#{isNotify},</if>
         </trim>
    </insert>

    <update id="updateEthTrade" parameterType="EthTrade">
        update eth_trade
        <trim prefix="SET" suffixOverrides=",">
            <if test="fromAddress != null and fromAddress != ''">from_address = #{fromAddress},</if>
            <if test="toAddress != null and toAddress != ''">to_address = #{toAddress},</if>
            <if test="amount != null">amount = #{amount},</if>
            <if test="txTime != null">tx_time = #{txTime},</if>
            <if test="blockNum != null">block_num = #{blockNum},</if>
            <if test="isNotify != null">is_notify = #{isNotify},</if>
            <if test="notifyCnt != null">notify_cnt = #{notifyCnt},</if>
        </trim>
        where tx_hash = #{txHash}
    </update>

    <delete id="deleteEthTradeByTxHash" parameterType="String">
        delete from eth_trade where tx_hash = #{txHash}
    </delete>

    <delete id="deleteEthTradeByTxHashs" parameterType="String">
        delete from eth_trade where tx_hash in 
        <foreach item="txHash" collection="array" open="(" separator="," close=")">
            #{txHash}
        </foreach>
    </delete>

</mapper>